mode " mouse" {

    # cursor speeds
    set $slow 3
    set $quick 10
    set $fast 50

    ##### vim keybindings #####
    # Mouse movement (slow/fine-tuned)
    bindsym Shift+$mod+h exec --no-startup-id xdotool mousemove_relative -- -$slow 0
    bindsym Shift+$mod+j exec --no-startup-id xdotool mousemove_relative 0 $slow
    bindsym Shift+$mod+k exec --no-startup-id xdotool mousemove_relative -- 0 -$slow
    bindsym Shift+$mod+l exec --no-startup-id xdotool mousemove_relative $slow 0
    # Mouse movement (quicker)
    bindsym Shift+h exec --no-startup-id xdotool mousemove_relative -- -$quick 0
    bindsym Shift+j exec --no-startup-id xdotool mousemove_relative 0 $quick
    bindsym Shift+k exec --no-startup-id xdotool mousemove_relative -- 0 -$quick
    bindsym Shift+l exec --no-startup-id xdotool mousemove_relative $quick 0
    # Mouse movement (fast)
    bindsym h exec --no-startup-id xdotool mousemove_relative -- -$fast 0
    bindsym j exec --no-startup-id xdotool mousemove_relative 0 $fast
    bindsym k exec --no-startup-id xdotool mousemove_relative -- 0 -$fast
    bindsym l exec --no-startup-id xdotool mousemove_relative $fast 0
    ###########################
    
    ##### arrow keys ##########
    # Mouse movement (slow/fine-tuned)
    #bindsym Left exec xdotool mousemove_relative -- -$slow 0
    #bindsym Down exec xdotool mousemove_relative 0 $slow
    #bindsym Up exec xdotool mousemove_relative -- 0 -$slow
    #bindsym Right exec xdotool mousemove_relative $slow 0
    # Mouse movement (quicker)
    #bindsym Shift+Left exec xdotool mousemove_relative -- -$quick 0
    #bindsym Shift+Down exec xdotool mousemove_relative 0 $quick
    #bindsym Shift+Up exec xdotool mousemove_relative -- 0 -$quick
    #bindsym Shift+Right exec xdotool mousemove_relative $quick 0
    # Mouse movement (fast)
    #bindsym Shift+$mod+Left exec xdotool mousemove_relative -- -$fast 0
    #bindsym Shift+$mod+Down exec xdotool mousemove_relative 0 $fast
    #bindsym Shift+$mod+Up exec xdotool mousemove_relative -- 0 -$fast
    #bindsym Shift+$mod+Right exec xdotool mousemove_relative $fast 0
    ###########################


    ##### Left Click #####
    # Click
    bindsym s exec --no-startup-id xdotool click 1
    # Click-and-drag
    bindsym Shift+s exec --no-startup-id xdotool mousedown 1
    # Drag release
    bindsym $mod+s exec --no-startup-id xdotool mouseup 1
    ######################

    ##### Middle Click ###
    # Click
    bindsym d exec --no-startup-id xdotool click 2
    # Click-and-drag
    bindsym Shift+d exec --no-startup-id xdotool mousedown 2
    # Drag release
    bindsym $mod+d exec --no-startup-id xdotool mouseup 2
    ######################

    ##### Right Click ####
    # Click
    bindsym f exec --no-startup-id xdotool click 3
    # Click-and-drag
    bindsym Shift+f exec --no-startup-id xdotool mousedown 3
    # Drag release
    bindsym $mod+f exec --no-startup-id xdotool mouseup 3
    ######################

    # return to normal keybindings
    bindsym Escape mode "default"
}

#bindsym $mod+$mod2+Shift+m mode "mouse"
bindsym $mod+Shift+m mode " mouse"
